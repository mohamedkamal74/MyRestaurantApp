@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}
<br />



@if (Model.Copouns.Count() > 0)
{
    <div class="border row">
        <div class="carousel w-100" data-ride="carousel" data-interval="2500" >
         @for (var i = 0; i < Model.Copouns.Count(); i++)
            {
                var base64 = Convert.ToBase64String(Model.Copouns.ToList()[i].Picture);
                var imgsrc = string.Format("data:image/*;base64,{0}", base64);
                if (i == 0)
                {
                    <div class="carousel-item active w-100">
                        <img src="@imgsrc" class="d-block w-100"   height="120px"/>
                    </div>
                }
                else
                {
                    <div class="carousel-item ">
                        <img src="@imgsrc"   class="d-block w-100"  height="120"/>
                    </div>
                    
                }
            }
    </div>
    </div>
}
<br />
<div class="whiteBackGround container">
 @foreach (var item in Model.Categories)
    {
        var menuitems = Model.MenuItems.Where(m => m.Category.Name == item.Name);
        <div class="row">
            @if (menuitems.Count() > 0)
            {
                <div class="col-12">
                    <div class="row">
                        <h3 class="text-success ml-2">@item.Name</h3>
                    </div>
                </div>

              
               @foreach (var menuitem in menuitems)
               {
                   <div class=" col-12 p-1 m-2">
                       <div class="row">
                           <div class="col-md-3 col-sm-12">
                         <img src="@menuitem.Image" width="99%" style="border-radius:5px;border:1px solid white"/>
                           </div>
                            <div class="col-md-9 col-sm-12">
                                <div class="row pr-3">

                                    <div class="col-8">
                                        <label class="text-primary">
                                            @menuitem.Name
                                        </label>
                                    </div>
                                </div>
                           </div>
                       </div>
                   </div>
               }

            
     

            }
        </div>
    }
</div>

