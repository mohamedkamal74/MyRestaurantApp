@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}
<br />



@if (Model.Copouns.Count() > 0)
{
    <div class="border row">
        <div class="carousel" data-ride="carousel" data-interval="2500" >
         @for (var i = 0; i < Model.Copouns.Count(); i++)
            {
                var base64 = Convert.ToBase64String(Model.Copouns.ToList()[i].Picture);
                var imgsrc = string.Format("data:image/*;base64,{0}", base64);
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img src="@imgsrc" class="d-block w-100"   height="120"/>
                    </div>
                }
                else
                {
                    <div class="carousel-item ">
                        <img src="@imgsrc"   class="d-block w-100"  height="120"/>
                    </div>
                    
                }
            }
    </div>
    </div>
}
<br />
<div class="whiteBackGround container">
 @foreach (var item in Model.Categories)
    {
        var menuitems = Model.MenuItems.Where(m => m.Category.Name == item.Name);
        <div class="row">
            @if (menuitems.Count() > 0)
            {
                <div class="col-12">
                    <div class="row">
                        <h3 class="text-primary">@item.Name</h3>
                    </div>
                </div>
                @foreach (var menuitem in menuitems)
               {
                   <div class="col-12">
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <div class="col-md-2 poster" ">
                                <img sre="@menuitem.Image" 
                            </div>
                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <h5 class="card-title">@movie.Title (@movie.Year)</h5>
                                        <p class="card-text text-justify">@(movie.StoreLine.Length > 500 ? $"{movie.StoreLine.Substring(0, 500)}..." : movie.StoreLine)</p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text mb-0 mt-2">
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <small class="text-muted">@movie.Rate.ToString("0.0")</small>
                                        </p>
                                        <div>
                                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-secondary">
                                                <i class="bi bi-camera-reels"></i>
                                                Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                                Edit
                                            </a>
                                            <a href="javascript:;" class="btn btn-danger js-delete" data-id="@movie.Id">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               }

            }
        </div>
    }
</div>

