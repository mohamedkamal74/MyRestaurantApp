
@model OrderDetailsCartViewModel
@{
    ViewData["Title"] = " Order Summary";
}

<form asp-action="" method="post">
    @if (Model.ShoppingCartsList.Any())
    {
        <div class="whiteBackGround ">
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0 row container ">
                        <div class="col-6">
                            <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary

                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Index" asp-controller="Home" asp-area="Customer" class="btn btn-outline-primary">Back to Cart</a>
                        </div>
                    </div>

                    <div class="card-body">
                      <div class="container rounded p-1">
                          <div class="row">
                              <div class="col-12 col-lg-6 pb-4">
                                  <div class="row">
                                      <h4 class="d-flex justify-content-between align-items-center mb-3">
                                          <span class="text-info">
                                              PickUp Details :
                                          </span>
                                      </h4>
                                  </div>

                                  <div class="row py-1">
                                   <div class="col-3">
                                       Name :
                                   </div>
                                   <div class="col-9">
                               <input id="txtName" type="text" asp-for="OrderHeader.PickUpName" class="form-control"/>
                                   </div>
                                  </div>

                                   <div class="row py-1">
                                   <div class="col-3">
                                       Phone :
                                   </div>
                                   <div class="col-9">
                               <input id="txtPhone" type="text" asp-for="OrderHeader.PhoneNumber" class="form-control"/>
                                   </div>
                                  </div>

                                   <div class="row py-1">
                                   <div class="col-3">
                                       Date :
                                   </div>
                                   <div class="col-9">
                               <input id="datePicker" type="date" value=""  asp-for="OrderHeader.PickUpDate" class="form-control"/>
                                   </div>
                                  </div>

                                   <div class="row py-1">
                                   <div class="col-3">
                                       Time :
                                   </div>
                                   <div class="col-9">
                               <input id="timePicker" type="time" value="" asp-for="OrderHeader.PickUpTime" class="form-control"/>
                                   </div>
                                  </div>

                                   <div class="row py-1">
                                   <div class="col-3">
                                       Comments :
                                   </div>
                                   <div class="col-9">
                               <textarea  asp-for="OrderHeader.Comments" class="form-control" style="height:100px"></textarea>
                                   </div>
                                  </div>

                              </div>

                              <div class="col-12 col-lg-5 offset-lg-1 pb-4">
                                  

                                   <h4 class="d-flex justify-content-between align-items-center mb-3">
                                          <span class="text-info">
                                              Order Summary :
                                          </span>
                                      </h4>

                                      <ul class="list-group mb-3">
                                          @foreach (var item in Model.ShoppingCartsList)
                                         {
                                             <li class="list-group-item d-flex justify-content-between">
                                                 <div>
                                                     <h6 class="my-0">
                                             @item.MenuItem.Name
                                                     </h6>
                                                     <small class="text-muted">
                                                         Quantity : @item.Count
                                                     </small>
                                                 </div>

                                                 <span class="text-muted">
                                                     $ @(Math.Round(item.MenuItem.Price *item.Count,2))
                                                 </span>

                                             </li>
                                             <hr />
                                         }
                                      </ul>
                             
                              </div>
                          </div>
                      </div> 
                    </div>


                    <div class="card-footer">
                        <div class="col-12 col-lg-4 offset-lg-8 col-md-6 offset-md-6">
                            <a  class="btn btn-success form-control">Place Order</a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    }
    else
    {
        <div class="whiteBackGround text-danger">
            No Item Added to shopping cart.....
        </div>
    }


</form>


@section Scripts{
<script>

    $(function(){

        var txtCopounCode=document.getElementById("txtCopounCode").value;
        if(txtCopounCode.length > 0){

            document.getElementById("applyCopoun").style.display= 'none';
            document.getElementById("removeCopoun").style.display= '';
        }
        else{
            document.getElementById("applyCopoun").style.display= '';
            document.getElementById("removeCopoun").style.display= 'none';

        }

    })
</script>
}