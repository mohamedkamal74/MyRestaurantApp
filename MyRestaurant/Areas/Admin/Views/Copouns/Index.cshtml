@model IEnumerable<Copoun>
@{
    ViewData["Title"] = "Index";
}

<div class="whiteBackGround border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Copouns List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButton" />
        </div>
    </div>
    <div>
        @if (!Model.Any())
        {
            <h3 class="text-danger">No Copouns ......</h3>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m=>m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m=>m.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m=>m.MinimumAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m=>m.IsActive)
                    </th>
                   <th>
                        @Html.DisplayNameFor(m=>m.Picture)

                   </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model)
               {
                  <tr>
                      <td>
                          @Html.DisplayFor(m=>item.Name)
                      </td>
                       <td>
                          @Html.DisplayFor(m=>item.Discount)
                      </td>
                       <td>
                          @Html.DisplayFor(m=>item.MinimumAmount)
                      </td>
                       <td>
                          @Html.DisplayFor(m=>item.IsActive)
                      </td>
                      <td>
            <img src="@("data:image/*;base64,"+Convert.ToBase64String(item.Picture))"  class="img-thumbnail"  style="height:70px;width:70px"/>

                      </td>
                      
                      <td style="width:150px">
                         <partial name="_OperationButtonsPartial" model="@item.Id"/>
                      </td>
                  </tr> 
               }
            </table>
        }
    </div>
</div>

